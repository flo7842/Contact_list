Doctype
html
    head
        title=title
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body
        div(class="container")
            h1(class="text-center mt-4") Liste de contact
            div
                p(class='text-center') Formulaire d'inscription
            form(action="/register" method="POST")
                div(class='form-group mb-2')
                    label(for="email") Pseudo
                    input(
                        class="form-control"
                        type="text"
                        name="username"
                        required
                    )
                div(class='form-group')
                    label(for="password") Mot de passe
                    input(
                        class="form-control"
                        type="password"
                        name="password"
                        required
                    )
                div
                    button(type="submit" class="btn btn-primary mt-2") S'inscrire

